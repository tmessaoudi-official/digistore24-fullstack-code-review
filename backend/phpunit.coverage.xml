<?xml version="1.0" encoding="UTF-8"?>

<!-- PHPUnit configuration with code coverage enabled -->
<!-- Requires Xdebug or PCOV extension -->
<!-- Usage: XDEBUG_MODE=coverage phpunit -c phpunit.coverage.xml -->
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="vendor/phpunit/phpunit/phpunit.xsd"
         colors="true"
         failOnDeprecation="true"
         failOnNotice="true"
         failOnWarning="true"
         failOnRisky="true"
         failOnIncomplete="true"
         failOnSkipped="false"
         beStrictAboutOutputDuringTests="true"
         beStrictAboutTestsThatDoNotTestAnything="true"
         beStrictAboutCoverageMetadata="true"
         bootstrap="tests/bootstrap.php"
         cacheDirectory=".phpunit.cache"
         executionOrder="random"
         requireCoverageMetadata="false"
         displayDetailsOnIncompleteTests="true"
         displayDetailsOnSkippedTests="true"
         displayDetailsOnTestsThatTriggerDeprecations="true"
         displayDetailsOnTestsThatTriggerErrors="true"
         displayDetailsOnTestsThatTriggerNotices="true"
         displayDetailsOnTestsThatTriggerWarnings="true"
>
    <php>
        <ini name="display_errors" value="1" />
        <ini name="error_reporting" value="-1" />
        <ini name="memory_limit" value="-1" />
        <ini name="zend.enable_gc" value="0" />
        <ini name="assert.exception" value="1" />
        
        <server name="APP_ENV" value="test" force="true" />
        <server name="SHELL_VERBOSITY" value="-1" />
        <server name="SYMFONY_PHPUNIT_VERSION" value="12.4" />
        <server name="SYMFONY_DEPRECATIONS_HELPER" value="max[direct]=0" />
        <server name="KERNEL_CLASS" value="App\Kernel" />
        
        <!-- Database configuration for tests -->
        <env name="DATABASE_URL" value="sqlite:///%kernel.project_dir%/var/test.db" />
    </php>

    <testsuites>
        <testsuite name="Unit">
            <directory>tests/Unit</directory>
        </testsuite>
        <testsuite name="Integration">
            <directory>tests/Integration</directory>
        </testsuite>
        <testsuite name="Functional">
            <directory>tests/Functional</directory>
        </testsuite>
    </testsuites>

    <source ignoreSuppressionOfDeprecations="true"
            ignoreIndirectDeprecations="true"
            restrictNotices="true"
            restrictWarnings="true"
    >
        <include>
            <directory>src</directory>
        </include>
        <exclude>
            <directory>src/DataFixtures</directory>
            <file>src/Kernel.php</file>
        </exclude>

        <deprecationTrigger>
            <method>Doctrine\Deprecations\Deprecation::trigger</method>
            <method>Doctrine\Deprecations\Deprecation::delegateTriggerToBackend</method>
            <function>trigger_deprecation</function>
        </deprecationTrigger>
    </source>

    <coverage includeUncoveredFiles="true"
              pathCoverage="false"
              ignoreDeprecatedCodeUnits="true"
              disableCodeCoverageIgnore="false"
    >
        <report>
            <html outputDirectory="var/coverage/html" lowUpperBound="50" highLowerBound="80"/>
            <text outputFile="php://stdout" showUncoveredFiles="false" showOnlySummary="true"/>
            <clover outputFile="var/coverage/clover.xml"/>
            <cobertura outputFile="var/coverage/cobertura.xml"/>
            <xml outputDirectory="var/coverage/xml"/>
        </report>
    </coverage>

    <extensions>
        <!-- Foundry - Factory library for test data -->
        <bootstrap class="Zenstruck\Foundry\PHPUnit\FoundryExtension" />
        
        <!-- Symfony Bridge - Clock and DNS mocking -->
        <bootstrap class="Symfony\Bridge\PhpUnit\SymfonyExtension">
            <parameter name="clock-mock-namespaces" value="App" />
            <parameter name="dns-mock-namespaces" value="App" />
        </bootstrap>
        
        <!-- DAMA Doctrine Test Bundle - Wraps each test in a database transaction -->
        <bootstrap class="DAMA\DoctrineTestBundle\PHPUnit\PHPUnitExtension" />
    </extensions>

    <logging>
        <junit outputFile="var/log/junit.xml"/>
        <testdoxHtml outputFile="var/log/testdox.html"/>
        <testdoxText outputFile="var/log/testdox.txt"/>
    </logging>
</phpunit>
